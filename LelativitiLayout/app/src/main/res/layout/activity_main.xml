<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08AD7F"
    android:padding="40dp"

    tools:context=".MainActivity">

    <EditText
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="160dp"
        android:background="#FFF"
        android:hint="Email" />

    <EditText
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_senha"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="12dp"
        android:background="#FFF"
        android:hint="Senha" />

    <Button
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_senha"
        android:layout_marginTop="12dp"
        android:backgroundTint="#DADADA"
        android:text="Log In"
        android:textColor="#08AD7F" />

    <TextView
        android:id="@+id/text_cadastrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Ainda não é cadastrado? Cadastre-se!"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/image_support"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_support"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_toEndOf="@id/image_support"
        android:text="Esqueceu sua senha?"/>


</RelativeLayout>